<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.non3gppaccessemulator">

    <!-- ======================== PERMISSIONS ======================== -->

    <!-- Network + Wi-Fi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Location (Wi-Fi RSSI ve Cellular Info için şart) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Cellular basic signal level -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Android 14 foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        android:required="false" />

    <!-- =========================== APP ============================== -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Non3GPPAccessEmulator"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CoreConnectionActivity -->
        <activity
            android:name=".CoreConnectionActivity"
            android:exported="true" />

        <!-- ===================== FOREGROUND SERVICE ===================== -->
        <service
            android:name=".HandoverMonitorService"
            android:exported="false"
            android:foregroundServiceType="dataSync">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </service>

    </application>

</manifest>
